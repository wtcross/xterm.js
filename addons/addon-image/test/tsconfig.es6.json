{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "target": "es2017",
    "rootDir": ".",
    "outDir": "../out-es6-test",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "browser/*": [ "../../../src/browser/*" ],
      "common/*": [ "../../../src/common/*" ]
    },
    "types": [
      "../../../node_modules/@types/mocha",
      "../../../node_modules/@types/node",
      "../../../out-es6-test/api/TestUtils"
    ]
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts"
  ],
  "references": [
    { "path": "../../../src/browser/tsconfig.es6.json" },
    { "path": "../../../src/common/tsconfig.es6.json" }
  ]
}
