{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2021"
    ],
    "outDir": "../out-es6-benchmark",
    "types": ["../../../node_modules/@types/node"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": false,
    "target": "es2021",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "common/*": ["../../../src/common/*"],
      "browser/*": ["../../../src/browser/*"],
      "SerializeAddon": ["../src/SerializeAddon"],
      "@xterm/addon-serialize": [
        "../typings/addon-serialize.d.ts"
      ]
    }
  },
  "include": ["../**/*", "../../../typings/xterm.d.ts"],
  "exclude": ["../../../**/*test.ts", "../../**/*api.ts"],
  "references": [
    { "path": "../../../src/common/tsconfig.es6.json" },
    { "path": "../../../src/browser/tsconfig.es6.json" }
  ]
}
