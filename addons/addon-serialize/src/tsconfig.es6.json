{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2021",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "../out-es6",
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "../../../src/common/*"
      ],
      "browser/*": [
        "../../../src/browser/*"
      ],
      "@xterm/addon-serialize": [
        "../typings/addon-serialize.d.ts"
      ]
    },
    "strict": true,
    "types": [
      "../../../node_modules/@types/mocha"
    ]
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts"
  ],
  "references": [
    {
      "path": "../../../src/common/tsconfig.es6.json"
    },
    {
      "path": "../../../src/browser/tsconfig.es6.json"
    }
  ]
}
