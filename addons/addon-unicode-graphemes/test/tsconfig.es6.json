{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "../out-es6-test",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "../../../src/common/*"
      ]
    },
    "types": [
      "../../../node_modules/@types/mocha",
      "../../../node_modules/@types/node",
      "../../../out-test/api/TestUtils"
    ]
  },
  "include": [
    "./**/*",
    "../../../typings/xterm.d.ts"
  ],
  "references": [
    {
      "path": "../../../src/common/tsconfig.es6.json"
    }
  ]
}
